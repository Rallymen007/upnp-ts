{
    "compilerOptions": {
        "target": "es6",
        "module": "commonjs",
        "moduleResolution": "node",
        "noEmitOnError": true,
        "noImplicitAny": true,
        "experimentalDecorators": true,
        "sourceMap": false,
        "inlineSourceMap": true,
        "declaration": true,
        "sourceRoot": "src",
        "outDir": "dist",
        "types": ["node"],
        "typeRoots": [ "node_modules/@types" ],
		"removeComments": true
    },
    "exclude": [
        "dist",
        "test",
        "node_modules"
    ]
}